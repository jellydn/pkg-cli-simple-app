{
  "name": "pkg-cli-simple-app",
  "version": "0.0.1",
  "description": "Typescript starter project",
  "repository": "https://github.com/jellydn/pkg-cli-simple-app",
  "license": "MIT",
  "author": "Huynh Duc Dung",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pkgroll --env.NODE_ENV=production --minify",
    "example": "npx tsx ./example/index.ts",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "lint": "xo --fix",
    "prepack": "clean-pkg-json",
    "pkg": "pkg --compress GZip .",
    "prepare": "husky install",
    "test": "vitest",
    "test:tsd": "tsd",
    "typecheck": "tsc --noEmit",
    "watch": "pkgroll --watch"
  },
  "xo": {
    "rules": {
      "import/extensions": "warn",
      "import/order": "off"
    },
    "space": true
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@skypack/package-check": "0.2.2",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "clean-pkg-json": "1.2.0",
    "husky": "9.1.1",
    "nano-staged": "0.8.0",
    "pkg": "5.8.1",
    "pkgroll": "2.4.1",
    "prettier": "3.3.3",
    "sort-package-json": "2.10.0",
    "ts-jest": "29.2.3",
    "tsd": "0.31.1",
    "tsx": "4.16.2",
    "typescript": "5.5.4",
    "vite": "5.3.4",
    "vitest": "2.0.4",
    "xo": "0.59.0"
  },
  "nano-staged": {
    "*.{js,ts}": "xo --fix",
    "*.{js,ts,css,md}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "pkg": {
    "targets": [
      "node14-macos-x64",
      "node14-linux-x64"
    ],
    "outputPath": "dist"
  },
  "tsd": {
    "directory": "tests"
  }
}